    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "windows": {
                "program": "${workspaceFolder}/bin/x64/Debug/net8.0/win-x64/Celeste64.dll",
            },
            "linux": {
                "program": "${workspaceFolder}/bin/x64/Debug/net8.0/linux-x64/Celeste64.dll"
            },
            "osx": {
                "program": "${workspaceFolder}/bin/x64/Debug/net8.0/osx-x64/Celeste64.dll"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
        }
        
    ]
}